class Controller {
    function boolean quit() { // Q
        return (Keyboard.keyPressed() = 81);
    }

    function boolean mode() { // R
        return (Keyboard.keyPressed() = 82);
    }

    function boolean switch() { // E
        return (Keyboard.keyPressed() = 69);
    }

    function boolean left() { // A
        return (Keyboard.keyPressed() = 65);
    }

    function boolean right() { // D
        return (Keyboard.keyPressed() = 68);
    }

    function boolean up() { // W
        return (Keyboard.keyPressed() = 87);
    }

    function boolean down() { // S
        return (Keyboard.keyPressed() = 83);
    }
}